{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php",
      "config": {
        "runtime": "php8.2" // 請根據你的實際 PHP 版本調整
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)", // 捕獲所有請求
      "destination": "/public/index.php" // 將所有請求重寫到 public/index.php 處理
    }
  ],
  "framework": "other"
}
