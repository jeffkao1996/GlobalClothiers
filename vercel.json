{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php",
      "config": {
        "runtime": "php8.2"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(css|js|ico|png|jpg|jpeg|gif|svg|webp|woff|woff2|ttf|eot))",
      "dest": "$src" 
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.php" 
    }
  ],
  "trailingSlash": false 
}
