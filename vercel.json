{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "builds": [
    {
      "src": "composer.json",
      "use": "@vercel/builder-library",
      "config": {
        "command": "composer install --prefer-dist --no-dev --optimize-autoloader"
      }
    }
  ]
}
